<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ba"
     >
   
      
    <EditText
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundededittext"
        android:ems="25"
        android:hint="Patients first name"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/roundededittext"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:ems="25"
        android:hint="Patients Last name"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/pphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundededittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:ems="25"
        android:hint="Patients phone number"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/padress"
        android:layout_alignRight="@+id/padress"
        android:layout_below="@+id/padress"
        android:layout_marginTop="108dp"
        android:onClick="reg"
        android:text="Register"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/buttonstyle"
        android:typeface="sans" />

    <EditText
        android:id="@+id/padress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fname"
        android:layout_alignParentTop="true"
        android:background="@drawable/roundededittext"
        android:layout_marginTop="135dp"
        android:ems="25"
        android:hint="Patients address"
         /> 
    <EditText
        android:id="@+id/BPlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/paddress"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/roundededittext"
        android:ems="25"
        android:hint="Patients blood pressure level"
         /> 
    <EditText
        android:id="@+id/BPstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BPlevel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:ems="25"
        android:background="@drawable/roundededittext"
        android:hint="Patients blood pressure status"
         />   
        <requestFocus />
</RelativeLayout>