<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.BPmonitor.MainActivity" >

 <Button
            android:id="@+id/btnreg"
            android:hint="Register"
            android:layout_width="160dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/buttonstyle"
        android:textStyle="bold"
        android:typeface="sans" />
   <Button
       android:id="@+id/doclogin"
       android:layout_width="160dp"
       android:hint="Doctor"
       android:layout_marginLeft="185dp"
       android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
       android:onClick="login" 
       android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/buttonstyle"
        android:typeface="sans" />
   
   <Button
       android:id="@+id/btnbroker"
       android:layout_width="160dp"
       android:layout_marginLeft="185dp"
       android:layout_height="wrap_content"
       android:hint="Help"
       android:background="@drawable/buttonstyle"
        android:layout_marginTop="60dp"
       android:onClick="brokerlogin" 
       android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />
    <TextView
        android:id="@+id/t1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btnbroker"
        android:background="@drawable/patintdoctor" 
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnservice"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnbroker"
        android:layout_alignBottom="@+id/btnbroker"
        android:layout_alignLeft="@+id/btnreg"
        android:hint="Services"
        android:onClick="service" 
        android:textSize="20sp"
        android:background="@drawable/buttonstyle"
        android:textStyle="bold"
        android:textColor="#000000"
        android:typeface="sans" />
    

</RelativeLayout>
